<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewWallpapeMeiao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/imageViewMoldeMeiao"
        app:layout_constraintEnd_toEndOf="@id/imageViewMoldeMeiao"
        app:layout_constraintStart_toStartOf="@id/imageViewMoldeMeiao"
        app:layout_constraintTop_toTopOf="@id/imageViewMoldeMeiao"
        app:srcCompat="@color/amarelo" />

    <ImageView
        android:id="@+id/imageViewTexturaMeiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/meiao_futebol_masculino_adulto_textura_modelo1" />

    <ImageView
        android:id="@+id/imageViewMoldeMeiao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewTexturaMeiao"
        app:layout_constraintEnd_toEndOf="@+id/imageViewTexturaMeiao"
        app:layout_constraintStart_toStartOf="@+id/imageViewTexturaMeiao"
        app:layout_constraintTop_toTopOf="@+id/imageViewTexturaMeiao"
        app:srcCompat="@drawable/meiao_futebol_masculino_adulto_modelo_modelo1" />

    <ImageView
        android:id="@+id/imageViewChuteira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewWallpapeMeiao"
        app:srcCompat="@drawable/calcado_futebol_masculino_detalhe_modelo1" />

</androidx.constraintlayout.widget.ConstraintLayout>